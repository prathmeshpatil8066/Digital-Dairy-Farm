<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- background color -->
    <solid android:color="#15D90404" />

    <!-- rounded corners -->
    <corners android:radius="12dp"/>

    <!-- optional border -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- optional padding (applies when used as a background) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>